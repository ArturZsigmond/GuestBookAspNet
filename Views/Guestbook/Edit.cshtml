@model GuestbookApp.Models.GuestbookEntry
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Entry";
}

<h2>Edit Guestbook Entry</h2>

<form method="post" asp-action="Edit">
    <input type="hidden" name="id" value="@Model.Id" />

    <label>Title</label>
    <input type="text" name="title" value="@Model.Title" required />

    <label>Comment</label>
    <textarea name="comment" required>@Model.Comment</textarea>

    <label>Rating (1â€“5)</label>
    <input type="number" name="rating" min="1" max="5" value="@Model.Rating" />

    <button type="submit">Save Changes</button>
    <a href="/Guestbook/Index" style="margin-left: 1em; color: white;">Cancel</a>
</form>
